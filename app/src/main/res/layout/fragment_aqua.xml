<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="245dp"
            android:layout_height="151dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="90dp"
            android:layout_weight="1"
            android:src="@drawable/aqua" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="230dp"
            android:layout_marginRight="50dp"
            android:gravity="center_vertical"
            android:text="Aqua es una aplicacion que te ayudara a resolver tu proble de agua potable, en donde contaras con el servicio de reportar tu proble y ser atentido lo mas proto posible." />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>